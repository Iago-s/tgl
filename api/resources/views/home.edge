<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title></title>
  <style>
    * { 
      margin: 0; 
      padding: 0; 
    }
    a {
      text-decoration: none;
    }
    h1, p {
      margin: 0;
    }
    .header { 
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: row;
      padding: 0px 30px;
      border-bottom: 2px solid #EBEBEB;
    }
    .logo {
      font-size: 44px;
      color: var(--gray);
      line-height: 70px;
    }
    .layout { 
      height: calc(100vh - 100px); 
      display: flex; 
      flex-direction: column;
      padding: 20px;
    }
    .footer { 
      height: 40px; 
      display: flex;
      justify-content: center;
      align-items: center;
      border-top: 2px solid #EBEBEB;
      font-size: 15px;
      color: var(--gray);
      padding: 10px;
    }
  </style>
</head>
<body>
  @include('partials/header')

  <section class="layout">
    @include(path)
    <main></main>
  </section>

  @include('partials/footer')
</body>
</html>
